<?xml version="1.0" encoding="utf-8"?>
<pddoc version="1.0">
    <object name="lfo.saw~">
        <title>lfo.saw~</title>
        <meta>
            <authors>
                <author>Serge Poltavsky</author>
            </authors>
            <description>Full-range unit-amplitude low frequency saw</description>
            <license>GPL3 or later</license>
            <library>ceammc</library>
            <category>lfo</category>
            <keywords>lfo oscillator saw phasor</keywords>
            <since>0.7</since>
            <also>
                <see>lfo.+saw~</see>
                <see>lfo.square~</see>
                <see>lfo.impulse~</see>
            </also>
        </meta>
        <arguments>
            <argument name="freq" type="float" units="herz">frequency</argument>
            <argument name="invert" type="float" minvalue="0" maxvalue="1">wave inversion</argument>
        </arguments>
        <properties>
            <property name="@invert" type="int" enum="0 1" default="0">wave inversion</property>
            <property name="@pause" type="int" enum="0 1" default="0">pause oscillator at current
            value</property>
            <property name="@phase" type="float" minvalue="0" maxvalue="1" default="0">initial
            phase</property>
            <property name="@active" type="int" enum="0 1" default="1">on/off dsp
            processing</property>
        </properties>
        <methods>
            <method name="reset">reset to initial state</method>
        </methods>
        <inlets>
            <inlet type="audio">
                <xinfo>frequency in Hz (can be zero or negative)</xinfo>
            </inlet>
            <inlet>
                <xinfo on="bang">reset phase</xinfo>
            </inlet>
        </inlets>
        <outlets>
            <outlet type="audio">saw wave in [-1, +1] range</outlet>
        </outlets>
        <example>
            <pdascii>
<![CDATA[
[osc.saw~ 100]
|
[ui.gain~ @size 120 14] [T]          [T]
|                       |            |
|              [F]      [@invert $1( [@pause $1(
|              |        |            |
|              [lfo.saw~ 1           ]
|          .___/
[pan.linsig~]    [ui.dsp~]
|  ^|.
[dac~]
]]>
            </pdascii>
        </example>
    </object>
</pddoc>
