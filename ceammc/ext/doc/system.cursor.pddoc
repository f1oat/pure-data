<?xml version="1.0" encoding="utf-8"?>
<pddoc version="1.0">
    <object name="system.cursor">
        <title>system.cursor</title>
        <meta>
            <authors>
                <author>Hans-Christoph Steiner</author>
                <author>Serge Poltavski</author>
            </authors>
            <description>Output cursor motion, mousewheel and button clicks</description>
            <license>GPL3 or later</license>
            <library>ceammc</library>
            <category>system</category>
            <keywords>cursor mouse mousewheel</keywords>
            <since>0.1</since>
        </meta>
        <properties>
            <property name="@relative" type="int" enum="0 1" default="0">relative output mode: if
            on output coords relative to the root window, otherwise output screen
            coordinates</property>
            <property name="@norm" type="int" enum="0 1" default="0">cursor x/y coordinates
            normalization by screen (or window) width/height</property>
            <property name="@clip" type="int" enum="0 1" default="0">clip mode. If true clip a
            cursor XY values to the [0..1] range in normalized mode, to the window width/height
            relative mode, otherwise to the screen width/height</property>
        </properties>
        <inlets>
            <inlet>
                <xinfo on="bang">output cursor position</xinfo>
                <xinfo on="float">when 1 is received - turns on cursor polling (position and
                buttons), when 0 is received - turns it off</xinfo>
            </inlet>
        </inlets>
        <outlets>
            <outlet>messages: motion X Y, mousewheel DELTA, button IDX STATE</outlet>
        </outlets>
        <example>
            <pdascii>
<![CDATA[
[T]       [T]            [T]        [T]         [system.cursor.abs]
|         |              |          |
|  [bang( [@relative $1( [@norm $1( [@clip $1(  [system.cursor.osc~]
|  |      |              |          |
|  |      |              |          |
|  |      |              |          |
[system.cursor                      ]
|
[route motion mousewheel button]
|        ^|   ^^|
|        [F]   [route 1 2 3]
|              |   ^|   ^^|
|              [T] [T]  [T]
|
[ui.dt]
]]>
            </pdascii>
            <pdascii id="1">
<![CDATA[
[inlet]
|
[system.cursor]
|
[outlet]
]]>
            </pdascii>
            <pdascii id="abs">
<![CDATA[
[T]       [T]            [T]        [T]
|         |              |          |
|  [bang( [@relative $1( [@norm $1( [@clip $1(
|  |      |              |          |
|  |      |              |          |
|  |      |              |          |
[system.cursor.1                    ]
|
[route motion mousewheel button]
|        ^|   ^^|
|        [F]   [route 1 2 3]
|              |   ^|   ^^|
|              [T] [T]  [T]
|
[ui.dt]
]]>
            </pdascii>
            <pdascii id="osc~">
<![CDATA[
[T]
|
[system.cursor @norm 1 @clip 1]
|
[route motion]
|
[lin->lin 0 1 100 5000]
|
[unpack f f]
|       ^|
[osc~]  [osc~]
|       |
[ui.hgain~]
|\
[dac~]
]]>
            </pdascii>
        </example>
    </object>
</pddoc>
